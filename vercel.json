{
  "version": 2,
  "builds": [
    {
      "src": "backend_api.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "src": "/upload-pdf/?", "dest": "/backend_api.py" },
    { "src": "/health/?", "dest": "/backend_api.py" },
    { "src": "/", "dest": "/backend_api.py" },
    { "src": "/(.*)", "dest": "/frontend/$1" }
  ]
}
